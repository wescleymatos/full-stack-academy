<% include header %>
    <h2>calculadora</h2>
    <form method="GET">
        Valor inicial: <input type="text" name="valorInicial">
        Taxa a.m.: <input type="text" name="taxa">
        Quantos meses: <input type="text" name="tempo">
        <button type="submit">Calcular</button>
    </form>

    <% if(resultado.calculado) { %>
        <h2>Resultado</h2>
        <p>R$ <%= resultado.total.toFixed(2) %></p>
    <% } %>

    <h3>Evolução</h3>
    <table>
        <tr>
            <th>Mês</th>
            <th>Valor</th>
        </tr>
        <% resultado.evolucao.forEach((item) => { %>
        <tr>
            <td><%= item.mes %></td>
            <td>R$  <%= item.juros.toFixed(2) %></td>
        </tr>
        <% }) %>
    </table>
<% include footer %>
